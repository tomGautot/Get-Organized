<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:descendantFocusability="blocksDescendants"
    android:clickable="true"
    android:id="@+id/whole_task"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:focusable="true">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hit yo mama from the back"
            android:textStyle="normal"
            android:textColor="@color/colorAlmostBlack"
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/task_time_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="17:30"
                android:textSize="22sp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:gravity="start"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/task_todos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="40dp"
                android:gravity="start"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/task_type_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>

</LinearLayout>