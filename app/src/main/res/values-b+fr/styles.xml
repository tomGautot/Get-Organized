<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dimen_add_task_layout">
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="optionMenuBodyText">
        <item  name="android:layout_margin">6dp</item>
        <item  name="android:textColor">@color/colorLightBlack</item>
        <item  name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="smallImageAnnotation">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="optionPageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="optionArticleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


</resources>
